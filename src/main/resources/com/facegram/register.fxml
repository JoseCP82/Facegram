<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.facegram.controllers.RegisterController">
   <children>
      <AnchorPane layoutY="70.0" prefHeight="340.0" prefWidth="320.0">
         <children>
            <Label layoutX="107.0" layoutY="31.0" text="Register">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <TextField fx:id="tfName" layoutX="86.0" layoutY="176.0" promptText="Name" />
            <TextField fx:id="tfPassword" layoutX="86.0" layoutY="230.0" promptText="Password" />
            <ImageView fitHeight="86.0" fitWidth="110.0" layoutX="105.0" layoutY="84.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </AnchorPane>
      <AnchorPane layoutY="410.0" prefHeight="70.0" prefWidth="320.0" style="-fx-background-color: #A9A9A9;">
         <children>
            <Button fx:id="btnLogIn" layoutX="35.0" layoutY="23.0" mnemonicParsing="false" text="LogIn" />
            <Button fx:id="btnRegister" layoutX="221.0" layoutY="23.0" mnemonicParsing="false" onAction="#register" text="Register" />
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="70.0" prefWidth="320.0" style="-fx-background-color: #A9A9A9">
         <children>
            <Button fx:id="btnClose" layoutX="279.0" layoutY="25.0" mnemonicParsing="false" onAction="#closeApp" prefHeight="24.0" prefWidth="24.0" style="-fx-background-radius: 100;" text="X">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnMin" layoutX="248.0" layoutY="25.0" mnemonicParsing="false" onAction="#minimizeWindow" prefHeight="24.0" prefWidth="24.0" style="-fx-background-radius: 100;" text="_">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Label layoutX="14.0" layoutY="22.0" text="FaceGram" textFill="#eeecec" textOverrun="LEADING_ELLIPSIS">
               <font>
                  <Font name="OpenSymbol" size="29.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
