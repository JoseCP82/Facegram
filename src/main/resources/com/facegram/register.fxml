<AnchorPane prefHeight="480.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.facegram.controllers.RegisterController">
   <children>
      <AnchorPane layoutY="70.0" prefHeight="340.0" prefWidth="320.0">
         <children>
            <Label layoutX="107.0" layoutY="31.0" text="Register">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <TextField fx:id="tfName" layoutX="86.0" layoutY="176.0" promptText="Name" />
            <TextField fx:id="tfPassword" layoutX="86.0" layoutY="230.0" promptText="Password" />
            <ImageView fitHeight="86.0" fitWidth="110.0" layoutX="105.0" layoutY="84.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </AnchorPane>
      <AnchorPane layoutY="410.0" prefHeight="70.0" prefWidth="320.0" style="-fx-background-color: #A9A9A9;">
         <children>
            <Button fx:id="btnLogIn" layoutX="35.0" layoutY="23.0" mnemonicParsing="false" style="-fx-background-color: black;" text="LogIn" textFill="#fffdfd" />
            <Button fx:id="btnRegister" layoutX="221.0" layoutY="23.0" mnemonicParsing="false" onAction="#register" style="-fx-background-color: black;" text="Register" textFill="WHITE" />
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="70.0" prefWidth="320.0" style="-fx-background-color: #A9A9A9">
         <children>
            <Label layoutX="14.0" layoutY="17.0" text="FaceGram">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <Button fx:id="btnMin" layoutX="252.0" layoutY="20.0" mnemonicParsing="false" onAction="#minimizeWindow" prefHeight="16.0" prefWidth="11.0" text="_">
               <font>
                  <Font name="Calibri Light Italic" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnClose" layoutX="283.0" layoutY="20.0" mnemonicParsing="false" onAction="#closeApp" prefHeight="26.0" prefWidth="22.0" style="-fx-background-radius: 100px;" text="X" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
