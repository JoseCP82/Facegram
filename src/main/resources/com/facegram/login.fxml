            <Button fx:id="btnClose" layoutX="282.0" layoutY="22.0" mnemonicParsing="false" onAction="#closeApp" prefHeight="24.0" prefWidth="24.0" style="-fx-background-radius: 100;" text="X">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
