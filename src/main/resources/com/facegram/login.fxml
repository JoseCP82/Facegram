            <Button fx:id="btnRegister" layoutX="45.0" layoutY="23.0" mnemonicParsing="false" onAction="#changeRegister" text="Register" />
            <Button fx:id="btnLogIn" layoutX="221.0" layoutY="23.0" mnemonicParsing="false" onAction="#changeFeed" text="LogIn" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
