<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="bdrPane" prefHeight="480.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.facegram.controllers.FeedController">
   <top>
      <AnchorPane prefHeight="70.0" prefWidth="320.0" style="-fx-background-color: #A9A9A9;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnClose" layoutX="282.0" layoutY="21.0" mnemonicParsing="false" onAction="#closeApp" prefHeight="24.0" prefWidth="24.0" style="-fx-background-radius: 100;" text="X">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Button fx:id="btnMinimize" layoutX="251.0" layoutY="21.0" mnemonicParsing="false" onAction="#minimizeWindow" prefHeight="24.0" prefWidth="24.0" style="-fx-background-radius: 100;" text="_">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Label layoutX="21.0" layoutY="19.0" text="FaceGram" textFill="#eeecec" textOverrun="LEADING_ELLIPSIS">
               <font>
                  <Font name="OpenSymbol" size="29.0" />
               </font>
            </Label>
         </children></AnchorPane>
   </top>
   <bottom>
      <AnchorPane prefHeight="70.0" prefWidth="320.0" style="-fx-background-color: #A9A9A9;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnCreate" layoutX="170.0" layoutY="22.0" mnemonicParsing="false" onAction="#createNewPost" text="New" />
            <Button layoutX="227.0" layoutY="22.0" mnemonicParsing="false" text="Settings" />
            <Button fx:id="btnLogout" layoutX="33.0" layoutY="22.0" mnemonicParsing="false" onAction="#logout" text="Logout" />
            <Button layoutX="101.0" layoutY="22.0" mnemonicParsing="false" text="Search" />
         </children>
      </AnchorPane>
   </bottom>
   <center>
      <ScrollPane fx:id="paneCenter" hbarPolicy="NEVER" prefHeight="170.0" prefWidth="319.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
